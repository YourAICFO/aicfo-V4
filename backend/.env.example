# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# CORS — comma-separated origins allowed to call the API.
# In production/staging ONLY these origins are permitted.
# In development, localhost is always allowed in addition.
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Connector dev routes (create-device, list-devices, route listing).
# Requires BOTH this flag AND admin authentication.
ENABLE_CONNECTOR_DEV_ROUTES=false

# Database Configuration (PostgreSQL) — must be running for the API to start
# Railway provides DATABASE_URL automatically
DATABASE_URL=postgresql://postgres:password@127.0.0.1:5432/aicfo

# Redis (optional in development: set QUEUE_RESILIENT_MODE=true to run without Redis)
REDIS_URL=redis://127.0.0.1:6379
QUEUE_RESILIENT_MODE=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@aicfo.com

# AI Configuration (OpenAI - Optional)
OPENAI_API_KEY=sk-your-openai-api-key
SENTRY_DSN=
LOG_LEVEL=info
GIT_SHA=
WORKER_CONCURRENCY=4
CONNECTOR_DOWNLOAD_URL=

# Plan limits (default: do not block; only log / warn)
ENFORCE_COMPANY_LIMITS=false
ENFORCE_USAGE_LIMITS=false

# Integration Settings
TALLY_API_URL=http://localhost:9000
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
QUICKBOOKS_CLIENT_ID=your-qb-client-id
QUICKBOOKS_CLIENT_SECRET=your-qb-client-secret
